{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/src/**/*",
    "src/main/index.ts",
    "src/preload/*",
    "src/database/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/main/src/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@schemas/*": [
        "src/database/schemas/*"
      ],
    }
  }
}
